{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Reserva Space !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper flex flex-col gap-4">
    <h1 class='text-center text-2xl font-bold'>Bienvenue chez Reserva Space !</h1>

    <h2>Liste de nos espaces proposés à la réservation : </h2>

    <div class="grid grid-cols-2 gap-4">
        {% for room in rooms %}
            <div class="p-4 border border-gray-300 rounded-lg flex flex-col gap-4">
                <h2 class="text-xl font-semibold">{{ room.name }}</h2>
                <p class="text-gray-600">{{ room.description }}</p>
                <ul class="mt-2">
                    <li><strong>Capacity:</strong> {{ room.capacity }}</li>
                    <li><strong>Price:</strong> {{ room.price }} € la demi-journée</li>
                    <li><strong>Category:</strong> {{ room.categoryId }}</li>
                </ul>
                <a href='{{ path('app_room_show', {'id': room.id}) }}' class='text-center border border-darker rounded-full p-2'>Choisir ma réservation</a>
            </div>
        {% else %}
            <p class="text-xl text-gray-500">Aucun espace disponible</p>
        {% endfor %}
    </div>

</div>
{% endblock %}
