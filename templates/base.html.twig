<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>
<body>
    <header>
        <nav class="bg-secondary p-4 flex justify-between items-center">
            <div class="flex flex-row items-center">
                <a href="/" class="text-darker text-xl font-bold">Reserva Space</a>
                
            </div>
            <div class="hidden md:flex items-center">
                <ul class="flex flex-row ml-6 space-x-4">
                    <li><a href="/admin" class="text-white hover:text-gray-200">Admin</a></li>
                    <li><a href="/panier" class="text-white hover:text-gray-200"><i class="fa-solid fa-cart-shopping"></i></a></li>
                    <li><a href="/connexion" class="text-white hover:text-gray-200">Connexion</a></li>
                </ul>
            </div>
            <div class="md:hidden">
                <button id="menu-button" class="text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                        <path d="M2 1h12a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM1 4h1v10H1V4zM2 3a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v1H2V3zm0 12V5h12v10H2z"/>
                    </svg>
                </button>
                <div id="menu" class="hidden absolute top-16 right-4 bg-white p-4 space-y-2">
                    <a href="/admin" class="block">Admin</a>
                    <a href="/panier" class="block">Panier</a>
                    <a href="/connexion" class="block">Connexion</a>
                </div>
            </div>
        </nav>
    </header>

    {% block body %}{% endblock %}

    <script>
        const menuButton = document.getElementById('menu-button');
        const menu = document.getElementById('menu');

        menuButton.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });
    </script>
</body>
</html>
